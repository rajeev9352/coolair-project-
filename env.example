# Application Environment
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Backend (server-side only)
# Used by Next.js API routes to proxy to your backend service
BACKEND_URL=http://localhost:5000

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars_long
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL=your_database_connection_string_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# Analytics & Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
NEXT_PUBLIC_ENABLE_FEATURE_X=false

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Email Addresses
ADMIN_EMAIL=admin@yourdomain.com
CONTACT_EMAIL=contact@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Development Overrides
NEXT_PUBLIC_MOCK_API=false

# API Keys for External Services
# Add any other API keys or sensitive information here

# Note: Never commit actual values to version control
# Copy this file to .env.local and update the values as needed
